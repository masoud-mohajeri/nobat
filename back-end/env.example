# Application Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=nobat_user
DB_PASSWORD=nobat_password
DB_DATABASE=nobat_db

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=nobat_redis_password
REDIS_DB=0

# JWT Configuration
JWT_SECRET=nobat_jwt_secret_key_2024
JWT_REFRESH_SECRET=nobat_refresh_secret_key_2024
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# OTP Configuration
OTP_EXPIRES_IN=300

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=10

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# SMS Service (for production)
SMS_PROVIDER=mock
SMS_API_KEY=your_sms_api_key
SMS_API_SECRET=your_sms_api_secret

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Security
CORS_ORIGIN=http://localhost:3000 